        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userid != null">
                #{userid},
            </if>
            <if test="classtype != null">
                #{classtype},
            </if>
            <if test="keyword != null">
                #{keyword},
            </if>
            <if test="resultcount != null">
                #{resultcount},
            </if>
            <if test="createdate != null">
                #{createdate},
            </if>
        </trim>
    </insert>

</mapper>