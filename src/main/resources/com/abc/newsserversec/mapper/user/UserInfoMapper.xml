<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.abc.newsserversec.mapper.user.UserInfoMapper">

    <select id="selectUserInfoByCondition" resultType="com.abc.newsserversec.model.user.UserInfo" parameterType="java.util.Map">
        select * from userinfo where
        <if test="username != null">
            username = #{username}
        </if>
        <if test="username == null">
            username is null
        </if>
        <if test="password != null">
            and password = #{password}
        </if>
        <if test="openid != null">
            and openid = #{openid}
        </if>
    </select>

    <update id="updateLoginCountById" parameterType="java.lang.Long">
        update userinfo set logincount = logincount + 1 where id = #{id}
    </update>

    <insert id="insertUserInfo" parameterType="java.util.Map">
        insert into userinfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="openid != null">
                openid,
            </if>
            <if test="nickname != null">
                nickname,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="createperson != null">
                createperson,
            </if>
            <if test="createdate != null">
                createdate,
            </if>
            <if test="modifyperson != null">
                modifyperson,
            </if>
            <if test="modifydate != null">
                modifydate,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">
                #{username},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="openid != null">
                #{openid},
            </if>
            <if test="nickname != null">
                #{nickname},
            </if>
            <if test="sex != null">
                #{sex},
            </if>
            <if test="createperson != null">
                #{createperson},
            </if>
            <if test="createdate != null">
                #{createdate},
            </if>
            <if test="modifyperson != null">
                #{modifyperson},
            </if>
            <if test="modifydate != null">
                #{modifydate},
            </if>
        </trim>
    </insert>

</mapper>