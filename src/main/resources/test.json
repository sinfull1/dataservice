{
  "size":0,
  "query": {
    "bool": {
      "must": [
        {
          "query_string": {
            "analyze_wildcard": true,
            "query": "product_name_ch:\"脑电图\""
          }
        }
      ]
    }
  },
  "aggs" : {
    "tags" : {
      "terms" : {
        "field" : "product_name_agg"
      },
      "aggs":{
        "company_name":{
          "terms":{
            "field": "company_name_agg"
          }
        },
        "class_code":{
          "terms":{
            "field": "class_code"
          }
        },
        "max_date":{
          "max":{
            "field":"approval_date"
          }
        },
        "min_date":{
          "min":{
            "field":"approval_date"
          }
        }
      }
    }
  },
  "_source": {
    "includes": ["*"]
  }
}